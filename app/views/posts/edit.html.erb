<h1> Editer l'article </h1>

<%= form_for @post do |f| %>
   <div class="form-group" >
        <label> Titre de l'article </label>
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label>Contenu </label>
        <%= f.text_area :content, class: 'form-control', size: "60x12" %>
    </div>
    <div class="form-group">
        <%= f.submit "Modifier ", class: 'btn btn-primary' %>
    </div>
   
<% end %>