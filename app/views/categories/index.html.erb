<h1>Categories</h1>

<table class="table" >
    <thead>
        <tr>
            <td>ID  </td>
            <td>Name  </td>
            <td>Slug  </td>
            <td>Actions  </td>
        </tr>
    </thead>
    <tbody> 
        <% @categories.each do |category|  %>
            <tr>  
                <td> <%=  category.id %> </td>
                <td><%=  category.name %>   </td>
                <td> <%=  category.slug %>  </td>
                <td> <a href="<%=  edit_category_path(category.id) %>" class="btn btn-primary" > Editer </a> 
                     <a data-confirm="etes vous sur ?" data-method="DELETE"  href="<%= category_path(category.id) %>" class="btn btn-danger"  > Supprimer </a>

                </td>
            </tr>
        <%end%>
    </tbody>

</table>

<p>
    <a href="<%= new_category_path %>" class="btn btn-success" > Créer une catégorie </a>
</p>